<!DOCTYPE html>
<html>
    <head>
        <title>Yelp Camp!</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script
          src="https://code.jquery.com/jquery-3.3.1.min.js"
          integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
          crossorigin="anonymous">
        </script>
        <script 
          src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" 
          type="text/javascript">
        </script>
        <link rel="stylesheet" href="/stylesheets/app.css">
        <% if(myCss) { %>
            <link rel="stylesheet" href="/stylesheets/<%= myCss %>.css">
        <% } %>
    </head>
<body>
  <% if(navBar) { %>
    <!-- navigation bar at top of page -->
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Yelp Camp!</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/campgrounds">Browse</a></li>
            <li><a href="/campgrounds/new">New campground</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if(user === undefined) { %>
              <li><a href="/login">Log in</a></li>
              <li><a href="/register">Sign up</a></li>
            <% } else { %>
              <li>welcome, <%= user.username %></li>
              <li><a href="/logout">Log out</a></li>
            <% } %>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>
  <% } %>

    <!--start a div here so bootstrap pads (or adds margin to?) the whole page-->
    <div class="container">
      <% messageKeys.forEach(function(key) { %>
        <% if(flash[key] != "") { %>
          <div class="alert alert-<%=key%>" role="alert">  <%= flash[key] %></div>
        <% } %>
      <% }); %>
